<html>
    <head>
        <title>Simple login</title>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
        <script>
            $(document).ready(function(){
                var user,pass;
                $("#submit").click(function(){
                    user=$("#user").val();
                    pass=$("#password").val();
                    $.post("http://nodejswebsite11.herokuapp.com/",{user: user,password: pass}, function(data){
                        if(data==='yes') {
                            alert("login success");
                        }
                    });
                });
            });
        </script>
    </head>
    <body>
        <h1>Hello people !</h1>
        <form action="results" method="post">
            <input type="TEXT" name="location" id="user" size="40"><br>
            <input type="password" name="pass" id="password" size="40"><br>
            <input type="submit" id="submit" value="Submit">
        </form>
        <% if (temp) { %>
            <h1><% temp %></h1>
        <% } else { %>
            <h1>Boohiss no myVar!</h1>
        <% } %>
    </body>
</html>